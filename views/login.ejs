<!DOCTYPE html>
<html lang="en">
<%-include("./templates/head.ejs")%>

    <body>
        <main id="loginmain" class="row justify-content-center p-0 m-0">
            <form class="col-4 m-auto p-3" id="form">
                <div class="row mt-2">
                    <label class="p-0 fw-bold" for="login">Login:</label>
                    <div class="input-group p-0">
                        <input class="form-control" type="text" name="login" id="login">
                    </div>
                </div>
                <div class="row mt-2">
                    <label class="p-0 fw-bold" for="password">Senha:</label>
                    <div class="input-group p-0">
                        <input class="form-control" type="password" name="password" id="password">
                    </div>
                </div>
                <div class="row mt-3">
                    <button type="submit" class="btn btn-success" id="submit">Enviar</button>
                    <small class="mt-3 text-center" id="help-text"></small>
                </div>
            </form>
        </main>


        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="js/login.js"></script>
    </body>

</html>