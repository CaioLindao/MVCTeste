    <script>
      let socket = io();

      $(() => {
        // Percorre todas as âncoras "Assitir"
        let buttons = $(".delete-button");
        buttons.each((i) => {
          let button = buttons[i];

          // Adiciona um evento onClick a cada ancora
          $(button).on("click", (e) => {
            e.preventDefault();
            let id = $(button).attr("id");

            $.ajax({
              url: `http://localhost:8080/create/${id}`,
              type: 'DELETE'
            });

          })
        })

        // Escuta a resposta do socket.io para videos deletados
        socket.on("delete", (id) => {
          $(`#${id}`).parent().parent().remove();
        })
      })
